@model LMS4Carroll.Models.Course

@{
    ViewData["Title"] = "Add | Course";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Create Course</div>
    <div class="panel-body">
        <br />
        <form asp-action="Create">
            <div class="form-horizontal">
                <h4>Course</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Department" class="col-md-2 control-label required"></label>
                    <div class="col-md-10">
                        <input asp-for="Department" name="DeptString" class="form-control" value="@ViewData["Department"]"/>
                        <span asp-validation-for="Department" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Handler" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Handler" name="HandlerString" class="form-control" value="@ViewData["Handler"]"/>
                        <span asp-validation-for="Handler" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label required"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" name="NameString" value="@ViewData["Name"]"/>
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Number" class="col-md-2 control-label required"></label>
                    <div class="col-md-10">
                        <input asp-for="Number" name="NumberString" class="form-control" value="@ViewData["Number"]"/>
                        <span asp-validation-for="Number" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LocationID" class="col-md-2 control-label required">Location</label>
                    <div class="col-md-10">
                        <select asp-for="LocationID" class="form-control" name="LocationInput" asp-items="ViewBag.LocationName" value="@ViewData["Location"]"></select>
                    </div>
                </div>
                <div class="form-group" id="createbtn">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-action="Index" class="btn btn-danger">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
        </div>
    </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
