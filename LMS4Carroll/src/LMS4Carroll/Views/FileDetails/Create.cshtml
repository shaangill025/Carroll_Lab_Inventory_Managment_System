@model LMS4Carroll.Models.FileDetail

@{
    ViewData["Title"] = "Add | File";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Create Invoice</div>
    <div class="panel-body">
        <br />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="File" class="col-md-2 control-label">Upload Files: </label>
            <div class="col-md-10">
                <input asp-for="File" class="form-control" type="file" name="file" />
                <span asp-validation-for="File" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContentType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContentType" name="contenttype" class="form-control" />
                <span asp-validation-for="ContentType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FileName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FileName" name="filename" class="form-control" />
                <span asp-validation-for="FileName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FileType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FileType" name="filetype" class="form-control" />
                <span asp-validation-for="FileType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="OrderID" class ="form-control" name="orderid" asp-items="ViewBag.OrderID"></select>
            </div>
        </div>
        <div class="form-group" id="createbtn">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </div>
    </div>
    </form>
   </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
