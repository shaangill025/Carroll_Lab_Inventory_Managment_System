@model IEnumerable<LMS4Carroll.Models.Vendor>

@{
    ViewData["Title"] = "List | Vendors";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Vendors</div>
    <div class="panel-body">
        <div class="btn-group">
            @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("AnimalUser") || User.IsInRole("BiologyUser"))
            {
                <a id="createRoleModal" asp-action="Create" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>  Add Vendor
                </a>
            }
        </div><br />
        <form asp-controller="Vendors" asp-action="Index">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="VendorString" value="@ViewData["currentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" />  
                    <a asp-action="Index" class="btn btn-default">Back to Full List</a>
                </p>
            </div>
        </form>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.VendorID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Comments)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("AnimalUser") || User.IsInRole("BiologyUser"))
                    {
                        <th>
                            Actions
                        </th>
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VendorID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comments)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("AnimalUser") || User.IsInRole("BiologyUser"))
                        {
                            <td>
                                <a id="addEditApplicationRoleModal" asp-action="Edit" asp-route-id="@item.VendorID" class="btn btn-info">
                                    <i class="glyphicon glyphicon-pencil"></i>  Edit
                                </a>
                                <a id="deleteApplicationRoleModal" asp-action="Delete" asp-route-id="@item.VendorID" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i>  Delete
                                </a>
                                <a id="addEditApplicationRoleModal" asp-action="Details" asp-route-id="@item.VendorID" class="btn btn-info">
                                    <i class="glyphicon glyphicon-search"></i>  Details
                                </a>
                            </td>
                        }
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
