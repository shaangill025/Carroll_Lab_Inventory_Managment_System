@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

<div class="top-buffer"></div>
<div id="accountpanel" class="panel panel-primary">
    <div class="panel-heading panel-head">Account Settings</div>
    <div class="panel-body">
        <br />
        <p class="text-success">@ViewData["StatusMessage"]</p>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>Password:</dt>
                <dd>
                    @if (Model.HasPassword)
                    {
                        <a asp-controller="Manage" asp-action="ChangePassword" class="btn btn-primary"><i class="glyphicon glyphicon-lock"></i>  Change </a>
                    }
                    else
                    {
                        <a asp-controller="Manage" asp-action="SetPassword" class="btn btn-danger"><i class="glyphicon glyphicon-lock"></i>  Create </a>
                    }
                </dd>
                <dt>External Logins:</dt>
                <dd>
                    <p class="text-danger">Not Implemented! Website uses SQL server for authentication</p>
                </dd>
                <dt>Phone Number:</dt>
                <dd>
                    <p class="text-danger">
                        Not Implemented! For future optimixation, phone numbers can used as a second factor of verification in two-factor authentication.
                    </p>
                    @(Model.PhoneNumber ?? "None")
                    @if (Model.PhoneNumber != null)
                    {
                        <br />
                        <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn btn-danger"><i class="glyphicon glyphicon-phone-alt"></i>  Change </a>
                        <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                            [<button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-trash"></i>  Remove </button>]
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn btn-danger"><i class="glyphicon glyphicon-phone-alt"></i>  Add </a>
                    }
                </dd>

                <dt>Two-Factor Authentication:</dt>
                <dd>
                    <p>
                        There are no two-factor authentication providers configured.
                    </p>
                    @*@if (Model.TwoFactor)
                        {
                            <form asp-controller="Manage" asp-action="DisableTwoFactorAuthentication" method="post" class="form-horizontal">
                                Enabled <button type="submit" class="btn-link btn-bracketed">Disable</button>
                            </form>
                        }
                        else
                        {
                            <form asp-controller="Manage" asp-action="EnableTwoFactorAuthentication" method="post" class="form-horizontal">
                                <button type="submit" class="btn-link btn-bracketed">Enable</button> Disabled
                            </form>
                        }*@
                </dd>
            </dl>
        </div>
        </div>
    </div>
