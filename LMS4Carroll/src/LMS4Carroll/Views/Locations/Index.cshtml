@model IEnumerable<LMS4Carroll.Models.Location>

@{
    ViewData["Title"] = "List | Locations";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Locations</div>
    <div class="panel-body">
        <div class="btn-group">
            @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("AnimalUser") || User.IsInRole("BiologyUser"))
            {
                <a id="createRoleModal" asp-action="Create" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>  Add Location
                </a>
            }
        </div><br />
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LocationID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StorageCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Room)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("AnimalUser") || User.IsInRole("BiologyUser"))
                    {
                        <th>
                            Actions
                        </th>
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StorageCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Room)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("AnimalUser") || User.IsInRole("BiologyUser"))
                        {
                            <td>
                                <a id="addEditApplicationRoleModal" asp-action="Edit" asp-route-id="@item.LocationID" class="btn btn-info">
                                    <i class="glyphicon glyphicon-pencil"></i>  Edit
                                </a>
                                <a id="deleteApplicationRoleModal" asp-action="Delete" asp-route-id="@item.LocationID" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i>  Delete
                                </a>
                                <a id="addEditApplicationRoleModal" asp-action="Details" asp-route-id="@item.LocationID" class="btn btn-info">
                                    <i class="glyphicon glyphicon-search"></i>  Details
                                </a>
                            </td>
                        }
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
